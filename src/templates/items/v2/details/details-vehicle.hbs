<div class="field-set field-set--narrow">

  <div class="form-group">
    <label class="form-group__label">Vehicle Type</label>
    <div class="form-group__fields">
      <select name="system.vehicleType" data-dtype="String">
        <option value="cart" {{#if (eq system.vehicleType "cart")}}selected{{/if}}>Cart</option>
        <option value="chariot-light" {{#if (eq system.vehicleType "chariot-light")}}selected{{/if}}>Light Chariot</option>
        <option value="chariot-medium" {{#if (eq system.vehicleType "chariot-medium")}}selected{{/if}}>Medium Chariot</option>
        <option value="chariot-heavy" {{#if (eq system.vehicleType "chariot-heavy")}}selected{{/if}}>Heavy Chariot</option>
        <option value="palanquin" {{#if (eq system.vehicleType "palanquin")}}selected{{/if}}>Palanquin</option>
        <option value="howdah" {{#if (eq system.vehicleType "howdah")}}selected{{/if}}>Howdah</option>
        <option value="wagon" {{#if (eq system.vehicleType "wagon")}}selected{{/if}}>Wagon</option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="form-group__label">Crew Required</label>
    <div class="form-group__fields">
      <input type="number" name="system.crew.required" value="{{system.crew.required}}" data-dtype="Number"/>
    </div>
  </div>

  <div class="form-group">
    <label class="form-group__label">Passengers</label>
    <div class="form-group__fields">
      <input type="number" name="system.crew.passengers" value="{{system.crew.passengers}}" data-dtype="Number"/>
    </div>
  </div>

  <div class="form-group">
    <label class="form-group__label">Draft Animals</label>
    <div class="form-group__fields">
      <input type="number" name="system.animals.count" value="{{system.animals.count}}" data-dtype="Number" style="width: 60px;"/>
      <input type="text" name="system.animals.type" value="{{system.animals.type}}" placeholder="e.g., Heavy Horse" style="flex: 1;"/>
    </div>
  </div>

  <h4 class="divider">Movement Speed</h4>

  <div class="form-group">
    <label class="form-group__label">Encounter (Normal/Heavy)</label>
    <div class="form-group__fields">
      <input type="number" name="system.speed.encounter" value="{{system.speed.encounter}}" data-dtype="Number" style="width: 80px;"/>
      /
      <input type="number" name="system.speed.encounterHeavy" value="{{system.speed.encounterHeavy}}" data-dtype="Number" style="width: 80px;"/>
    </div>
  </div>

  <div class="form-group">
    <label class="form-group__label">Expedition (Normal/Heavy)</label>
    <div class="form-group__fields">
      <input type="number" name="system.speed.expedition" value="{{system.speed.expedition}}" data-dtype="Number" style="width: 80px;"/>
      /
      <input type="number" name="system.speed.expeditionHeavy" value="{{system.speed.expeditionHeavy}}" data-dtype="Number" style="width: 80px;"/>
    </div>
  </div>

  <h4 class="divider">Cargo Capacity (stone)</h4>

  <div class="form-group">
    <label class="form-group__label">Normal / Heavy Load</label>
    <div class="form-group__fields">
      <input type="number" name="system.cargo.normal" value="{{system.cargo.normal}}" data-dtype="Number" style="width: 80px;"/>
      /
      <input type="number" name="system.cargo.heavy" value="{{system.cargo.heavy}}" data-dtype="Number" style="width: 80px;"/>
    </div>
  </div>

  <div class="form-group">
    <label class="form-group__label">Current Load</label>
    <div class="form-group__fields">
      <input type="number" name="system.cargo.current" value="{{system.cargo.current}}" data-dtype="Number"/>
    </div>
  </div>

  <h4 class="divider">Combat</h4>

  <div class="form-group">
    <label class="form-group__label">AC</label>
    <div class="form-group__fields">
      <input type="number" name="system.combat.ac" value="{{system.combat.ac}}" data-dtype="Number"/>
    </div>
  </div>

  <div class="form-group">
    <label class="form-group__label">Structural HP</label>
    <div class="form-group__fields">
      <input type="number" name="system.combat.hp" value="{{system.combat.hp}}" data-dtype="Number"/>
    </div>
  </div>

  <h4 class="divider">Cost</h4>

  <div class="form-group">
    <label class="form-group__label">Value</label>
    <div class="form-group__fields">
      <input type="number" name="system.cost.value" value="{{system.cost.value}}" data-dtype="Number" style="flex: 1;"/>
      <select name="system.cost.currency" data-dtype="String" style="width: 80px;">
        <option value="gp" {{#if (eq system.cost.currency "gp")}}selected{{/if}}>gp</option>
        <option value="sp" {{#if (eq system.cost.currency "sp")}}selected{{/if}}>sp</option>
        <option value="cp" {{#if (eq system.cost.currency "cp")}}selected{{/if}}>cp</option>
      </select>
    </div>
  </div>

</div>
